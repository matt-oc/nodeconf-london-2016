doctype html
html(lang='en')

    head

        //- CSS
        link(type='text/css', href='/css/styles.css', rel='stylesheet')

        //- Meta
        meta(charset='utf-8')
        meta(name='fragment', content='!')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

        //- Mobile
        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no')

        //- SEO
        meta(name='description', content='Your work happiness meter')
        meta(name='keywords', content='nodejs, javascript, node.js, node, js, london, digital, transformation, enterprise, community')

        //- Icons
        link(rel='shortcut icon', href='/assets/icons/favicon.ico', type='image/png')

        //- OpenGraph
        meta(property='og:url', content='http://london.nodeconf.com')
        meta(property='og:type', content='website')
        meta(property='og:site_name', content='NodeConf London 2016')
        meta(property='og:title', content='NodeConf London 2016 - Wed 11th May 2016')
        meta(property='og:description', content='NodeConf London will bring together our industry\'s enterprise heavyweights, our subject experts and highlight the finest talent London has to offer.')
        meta(property='og:image', content='http://london.nodeconf.com/assets/illustrations/share-image.png')
        meta(property='og:image:width', content='1200')
        meta(property='og:image:height', content='630')

        //- iOS icons
        link(href='/assets/icons/iphone.png', rel='apple-touch-icon')
        link(sizes='76x76', href='/assets/icons/ipad.png', rel='apple-touch-icon')
        link(sizes='120x120', href='/assets/icons/iphone-retina.png', rel='apple-touch-icon')
        link(sizes='152x152', href='/assets/icons/ipad-retina.png', rel='apple-touch-icon')

        //- Android icons
        link(sizes='196x196', href='/assets/icons/android-hires.png', rel='shortcut icon')
        link(sizes='128x128', href='/assets/icons/android.png', rel='shortcut icon')

        //- Title
        title
            block title
                | NodeConf London 2016

    body

        block top-content

        header(data-header): .page-size

            a.logo(href='/', title='NodeConf Logo')
                img(src='/assets/logo/nodeconf.svg', alt='NodeConf')
                span London,&nbsp;2016

            a.hamburger(data-touch-element, data-navigation-toggle): .inner
                span
                span
                span
                span
                span
                span
                span

            ul.nav(data-navigation)
                li: a(href='/#hero') Home
                li: a(href='/scholarship') Scholarship
                //- li: a(href='/call-for-speakers') Call for Speakers
                li: a(href='/#speakers') Speakers
                li: a(href='/#venue') Venue
                li: a(href='/#sponsors') Sponsors
                li: a(href='/#schedule') Schedule
                li: a(href='/code-of-conduct') Code of Conduct

        block main-content

        footer: .page-size

            ul.links

                li: a.contact-github(href='https://github.com/tancredi/nodeconf-london-2016', alt='Fork on Github', target='_blank')
                    i.icon-github
                    span Fork Us

                li: a.contact-twitter(href='https://twitter.com/nodeconf_london', alt='Twitter', target='_blank')
                    i.icon-twitter
                    span @nodeconf_london

                li: a.contact-email(href='mailto:ian.crowther@nearform.com?Subject=NodeConf%20London%202016%20-%20Enquiry', alt='Email', target='_blank')
                    i.icon-mail
                    span Contact Us

        script(type='text/javascript', src='/js/index.js')

